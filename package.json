{
  "name": "personal-brain",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts src/ tests/",
    "lint:fix": "eslint --ext .ts src/ tests/ --fix",
    "lint:strict": "eslint --ext .ts src/ tests/ --max-warnings=0",
    "fmt": "eslint --ext .ts src/ tests/ --fix",
    "dev": "bun run src/index.ts",
    "import": "bun run src/import.ts",
    "delete": "bun run src/delete.ts",
    "cli": "bun run src/cli.ts",
    "embed": "bun run src/embed.ts all",
    "embed:notes": "bun run src/embed.ts notes",
    "embed:profile": "bun run src/embed.ts profile",
    "tag": "bun run src/tag.ts",
    "tag:profile": "bun run src/tag.ts profile",
    "tag:notes": "bun run src/tag.ts notes",
    "matrix": "bun run src/interfaces/matrix.ts",
    "matrix:setup": "bun run src/interfaces/matrix-setup.ts",
    "matrix:logout": "bun run src/interfaces/matrix-logout.ts",
    "mcp:server": "bun run src/mcp-http-server.ts",
    "mcp:stdio": "bun run src/mcp-stdio-server.ts",
    "mcp:inspect": "PORT=8080 mcp-inspector bun run src/mcp-stdio-server.ts",
    "mcp:inspect:debug": "DEBUG=1 mcp-inspector",
    "mcp:inspect:kill": "pkill -f mcp-inspector || echo 'No MCP Inspector process found'; pkill -f 'node.*5173' || echo 'No Node process on port 5173'",
    "mcp:test": "bun test tests/mcp/mcp-http-server.test.ts",
    "mcp:test:stdio": "bun test tests/mcp/mcp-stdio-server.test.ts",
    "start": "pm2 start src/interfaces/matrix.ts --interpreter $(which bun) --name personal-brain",
    "stop": "pm2 stop personal-brain",
    "restart": "pm2 describe personal-brain > /dev/null 2>&1 && pm2 restart personal-brain || bun run start",
    "test:coverage": "bun test --preload tests/setup.ts --coverage",
    "test": "./test-runner.sh",
    "test:all": "./test-runner.sh --all",
    "test:website": "./test-runner.sh tests/commands/website-commands.test.ts",
    "prepare": "husky",
    "website:dev": "astro dev --root ./src/website",
    "website:build": "astro build --outDir ./dist/production --root ./src/website",
    "website:build:preview": "astro build --outDir ./dist/preview --root ./src/website",
    "website:preview": "bun run scripts/server/production-server.ts preview",
    "website:production": "bun run scripts/server/production-server.ts production",
    "website:cleanup": "pm2 stop website-preview || true && pm2 delete website-preview || true && pm2 stop website-production || true && pm2 delete website-production || true",
    "prestart": "bun run website:cleanup",
    "prerestart": "bun run website:cleanup"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@modelcontextprotocol/inspector": "^0.7.0",
    "@types/bun": "latest",
    "@types/express": "^5.0.1",
    "@types/sanitize-html": "^2.15.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.23.0",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "pm2": "^5.3.1",
    "astro": "^4.5.0",
    "@astrojs/check": "^0.5.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.0",
    "@ai-sdk/openai": "^1.3.0",
    "@anthropic-ai/claude-code": "^0.2.48",
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@types/highlight.js": "^10.1.0",
    "@types/marked": "^6.0.0",
    "ai": "^4.2.0",
    "chalk": "^5.4.1",
    "drizzle-orm": "^0.40.1",
    "drizzle-zod": "^0.7.0",
    "express": "^5.1.0",
    "highlight.js": "^11.11.1",
    "inquirer": "^12.5.0",
    "marked": "^15.0.7",
    "matrix-js-sdk": "^37.1.0",
    "nanoid": "^5.1.4",
    "openai": "^4.89.0",
    "sanitize-html": "^2.15.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  }
}