---
// About.astro - About section for landing page
interface Props {
  about: {
    title: string;
    content: string;
    imageUrl?: string;
    enabled: boolean;
  };
}

const { about } = Astro.props;

// Don't render if section is disabled
if (!about.enabled) return null;
---

<section class="py-20 px-6 md:px-10 lg:px-16 bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto max-w-6xl">
    <div class="flex flex-col md:flex-row gap-12 items-center">
      {about.imageUrl && (
        <div class="md:w-1/3 w-full">
          <img
            src={about.imageUrl}
            alt="About me"
            class="rounded-lg shadow-md w-full max-w-md mx-auto"
          />
        </div>
      )}
      
      <div class={about.imageUrl ? "md:w-2/3 w-full" : "w-full"}>
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900 dark:text-white">
          {about.title}
        </h2>
        
        <div class="prose prose-lg dark:prose-invert max-w-none text-gray-600 dark:text-gray-300">
          {about.content}
        </div>
      </div>
    </div>
  </div>
</section>