---
// About.astro - About section for landing page
interface Props {
  about: {
    title: string;
    content: string;
    imageUrl?: string;
    ctaText?: string;
    ctaLink?: string;
    enabled: boolean;
  };
}

const { about } = Astro.props;

// Don't render if section is disabled or undefined
if (!about || about.enabled === false) return null;
---

<section id="about" class="py-20 px-6 md:px-10 lg:px-16 bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-800 relative overflow-hidden">
  {/* Decorative elements */}
  <div class="absolute top-0 left-0 w-64 h-64 bg-primary-100 dark:bg-primary-900/20 rounded-full -translate-x-1/2 -translate-y-1/2 blur-3xl opacity-60"></div>
  <div class="absolute bottom-0 right-0 w-64 h-64 bg-primary-200 dark:bg-primary-800/20 rounded-full translate-x-1/2 translate-y-1/2 blur-3xl opacity-40"></div>
  
  <div class="container mx-auto max-w-6xl relative z-10">
    <div class="flex flex-col md:flex-row gap-12 items-center">
      {about.imageUrl && (
        <div class="md:w-2/5 w-full">
          <div class="relative animate-float p-2 bg-white dark:bg-gray-800 rounded-2xl shadow-soft group transition-all duration-300 hover:shadow-lg">
            <img
              src={about.imageUrl}
              alt="About me"
              class="rounded-xl w-full max-w-md mx-auto object-cover"
              loading="lazy"
            />
            {/* Image decorative accent */}
            <div class="absolute inset-0 border-2 border-primary-200 dark:border-primary-700 rounded-xl opacity-0 group-hover:opacity-100 transition-all duration-300 scale-105 group-hover:scale-100"></div>
          </div>
        </div>
      )}
      
      <div class={about.imageUrl ? "md:w-3/5 w-full" : "w-full"}>
        <div class="inline-block px-3 py-1 text-sm font-medium text-primary-700 dark:text-primary-300 bg-primary-50 dark:bg-primary-900/30 rounded-full mb-4">
          About Me
        </div>
        
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900 dark:text-white">
          {about.title}
        </h2>
        
        <div class="prose prose-lg dark:prose-invert max-w-none text-gray-600 dark:text-gray-300 animate-fade-in-up">
          {about.content}
        </div>
        
        {about.ctaText && about.ctaLink && (
          <div class="mt-8 animate-fade-in" style="animation-delay: 0.2s;">
            <a
              href={about.ctaLink}
              class="inline-flex items-center px-6 py-3 text-white bg-primary-600 hover:bg-primary-700 rounded-lg font-medium shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1"
            >
              {about.ctaText}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        )}
      </div>
    </div>
  </div>
</section>