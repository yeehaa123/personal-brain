---
// Cta.astro - Call-to-action section for landing page
interface Props {
  cta: {
    title: string;
    subtitle?: string;
    buttonText: string;
    buttonLink: string;
    enabled: boolean;
  };
}

const { cta } = Astro.props;

// Don't render if section is disabled
if (!cta.enabled) return null;
---

<section class="py-20 px-6 md:px-10 lg:px-16 bg-blue-600 dark:bg-blue-800 text-white">
  <div class="container mx-auto max-w-4xl text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-4">
      {cta.title}
    </h2>
    
    {cta.subtitle && (
      <p class="text-lg text-blue-100 mb-8 max-w-2xl mx-auto">
        {cta.subtitle}
      </p>
    )}
    
    <a
      href={cta.buttonLink}
      class="inline-block px-8 py-3 text-blue-600 bg-white hover:bg-gray-100 rounded-md font-medium transition duration-300 ease-in-out transform hover:scale-105 shadow-lg"
    >
      {cta.buttonText}
    </a>
  </div>
</section>