---
// Footer.astro - Footer section for landing page
interface Props {
  footer: {
    contactDetails?: {
      email?: string;
      phone?: string;
      social?: Array<{
        platform: string;
        url: string;
        icon?: string;
      }>;
    };
    copyrightText?: string;
    links?: Array<{
      text: string;
      url: string;
    }>;
    enabled: boolean;
  };
}

const { footer } = Astro.props;

// Don't render if section is disabled
if (!footer.enabled) return null;

// Social media icons mapping
const socialIcons = {
  twitter: "fab fa-twitter",
  linkedin: "fab fa-linkedin",
  facebook: "fab fa-facebook",
  instagram: "fab fa-instagram",
  youtube: "fab fa-youtube",
  github: "fab fa-github",
  medium: "fab fa-medium",
  default: "fas fa-link"
};
---

<footer class="py-12 px-6 md:px-10 lg:px-16 bg-gray-900 text-white">
  <div class="container mx-auto max-w-6xl">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
      <!-- Contact Information -->
      <div>
        <h3 class="text-xl font-semibold mb-4">Contact</h3>
        
        <ul class="space-y-2">
          {footer.contactDetails?.email && (
            <li>
              <a href={`mailto:${footer.contactDetails.email}`} class="text-gray-300 hover:text-white transition-colors">
                {footer.contactDetails.email}
              </a>
            </li>
          )}
          
          {footer.contactDetails?.phone && (
            <li>
              <a href={`tel:${footer.contactDetails.phone.replace(/\s+/g, '')}`} class="text-gray-300 hover:text-white transition-colors">
                {footer.contactDetails.phone}
              </a>
            </li>
          )}
        </ul>
      </div>
      
      <!-- Links -->
      {footer.links && footer.links.length > 0 && (
        <div>
          <h3 class="text-xl font-semibold mb-4">Links</h3>
          
          <ul class="space-y-2">
            {footer.links.map(link => (
              <li>
                <a href={link.url} class="text-gray-300 hover:text-white transition-colors">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}
      
      <!-- Social Media -->
      {footer.contactDetails?.social && footer.contactDetails.social.length > 0 && (
        <div>
          <h3 class="text-xl font-semibold mb-4">Follow Me</h3>
          
          <div class="flex space-x-4">
            {footer.contactDetails.social.map(social => {
              const platformName = social.platform.toLowerCase();
              const iconClass = social.icon || socialIcons[platformName] || socialIcons.default;
              
              return (
                <a 
                  href={social.url} 
                  class="text-gray-300 hover:text-white transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <span class="sr-only">{social.platform}</span>
                  <i class={iconClass}></i>
                </a>
              );
            })}
          </div>
        </div>
      )}
    </div>
    
    <!-- Copyright -->
    <div class="pt-8 mt-8 border-t border-gray-800 text-center text-gray-400">
      {footer.copyrightText || `Â© ${new Date().getFullYear()} All rights reserved.`}
    </div>
  </div>
</footer>