---
// Hero.astro - Hero section component for landing page
interface Props {
  hero: {
    headline: string;
    subheading: string;
    ctaText: string;
    ctaLink: string;
    imageUrl?: string;
  };
}

const { hero } = Astro.props;
---

<section class="py-20 px-6 md:px-10 lg:px-16 relative bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-900">
  <div class="container mx-auto max-w-6xl flex flex-col md:flex-row gap-12 items-center">
    <div class="flex-1 space-y-6 text-center md:text-left">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white leading-tight">
        {hero.headline}
      </h1>
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-2xl">
        {hero.subheading}
      </p>
      <div>
        <a
          href={hero.ctaLink}
          class="inline-block px-8 py-3 text-white bg-blue-600 hover:bg-blue-700 rounded-md font-medium transition duration-300 ease-in-out transform hover:scale-105"
        >
          {hero.ctaText}
        </a>
      </div>
    </div>
    {hero.imageUrl && (
      <div class="flex-1 flex justify-center md:justify-end">
        <img
          src={hero.imageUrl}
          alt="Hero image"
          class="w-full max-w-md rounded-lg shadow-xl"
        />
      </div>
    )}
  </div>
</section>