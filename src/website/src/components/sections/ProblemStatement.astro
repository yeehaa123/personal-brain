---
// ProblemStatement.astro - Problem statement section for landing page
interface Props {
  problemStatement: {
    title: string;
    description: string;
    bulletPoints?: string[];
    enabled: boolean;
  };
}

const { problemStatement } = Astro.props;

// Don't render if section is disabled
if (!problemStatement.enabled) return null;
---

<section id="problem" class="py-24 px-6 md:px-10 lg:px-16 bg-gray-50 dark:bg-gray-800 relative">
  <div class="container mx-auto max-w-5xl relative z-10">
    <div class="text-center mb-12">
      <div class="inline-block px-3 py-1 text-sm font-medium text-primary-700 dark:text-primary-300 bg-primary-50 dark:bg-primary-900/30 rounded-full mb-4">
        The Challenge
      </div>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900 dark:text-white">
        {problemStatement.title}
      </h2>
    </div>
    
    <div class="bg-white dark:bg-gray-900 rounded-2xl shadow-light p-8 md:p-12">
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="text-gray-700 dark:text-gray-300 text-lg leading-relaxed mb-8">
          {problemStatement.description}
        </p>
        
        {problemStatement.bulletPoints && problemStatement.bulletPoints.length > 0 && (
          <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 mt-8">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Key Challenges</h3>
            <ul class="space-y-3">
              {problemStatement.bulletPoints.map((point) => (
                <li class="flex items-start">
                  <span class="text-primary-600 dark:text-primary-400 mt-1 mr-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </span>
                  <span class="text-gray-700 dark:text-gray-300">{point}</span>
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
    </div>
    
    {/* Decorative element */}
    <div class="hidden md:block absolute -bottom-10 -left-10 w-40 h-40 bg-primary-100 dark:bg-primary-900/20 rounded-full blur-2xl opacity-60 z-0"></div>
  </div>
</section>