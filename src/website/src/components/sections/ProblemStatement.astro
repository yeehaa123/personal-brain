---
// ProblemStatement.astro - Problem statement section for landing page
interface Props {
  problemStatement: {
    title: string;
    description: string;
    bulletPoints?: string[];
    enabled: boolean;
  };
}

const { problemStatement } = Astro.props;

// Don't render if section is disabled
if (!problemStatement.enabled) return null;
---

<section id="problem" class="py-24 px-6 md:px-10 lg:px-16 bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-900 relative overflow-hidden">
  {/* Background pattern with subtle animation */}
  <div class="absolute inset-0 opacity-5 dark:opacity-10 animate-pulse-slow" style="animation-duration: 10s;">
    <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
      <defs>
        <pattern id="diagonalHatch" width="40" height="40" patternUnits="userSpaceOnUse" patternTransform="rotate(45)">
          <line x1="0" y1="0" x2="0" y2="40" stroke="currentColor" stroke-width="1" />
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#diagonalHatch)" />
    </svg>
  </div>
  
  <div class="container mx-auto max-w-5xl relative z-10">
    <div class="text-center mb-12 reveal-on-scroll-scale" data-animate-once="true">
      <div class="inline-block px-3 py-1 text-sm font-medium text-primary-700 dark:text-primary-300 bg-primary-50 dark:bg-primary-900/30 rounded-full mb-4 animate-fade-in">
        The Challenge
      </div>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900 dark:text-white animate-fade-in-up" style="animation-delay: 0.1s;">
        {problemStatement.title}
      </h2>
    </div>
    
    <div class="bg-white dark:bg-gray-900 rounded-2xl shadow-soft p-8 md:p-12 border border-gray-100 dark:border-gray-700 hover:shadow-lg transition-all duration-300 reveal-on-scroll" data-animate-once="true">
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <p class="text-gray-700 dark:text-gray-300 text-lg leading-relaxed mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
          {problemStatement.description}
        </p>
        
        {problemStatement.bulletPoints && problemStatement.bulletPoints.length > 0 && (
          <div class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-800 rounded-xl p-6 mt-8 border border-gray-200 dark:border-gray-700 shadow-inner animate-shine">
            <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">Key Challenges</h3>
            <ul class="space-y-4 stagger-animation-rtl">
              {problemStatement.bulletPoints.map((point, index) => (
                <li class="flex items-start">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center mr-4 text-primary-600 dark:text-primary-400">
                    <span class="font-medium">{index + 1}</span>
                  </div>
                  <div>
                    <p class="text-gray-700 dark:text-gray-300">{point}</p>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
      
      {/* Add a CTA button that links to the services section */}
      <div class="mt-10 text-center animate-fade-in" style="animation-delay: 0.6s;">
        <a 
          href="#services" 
          class="inline-flex items-center px-6 py-3 text-gray-700 dark:text-gray-200 bg-gray-100 hover:bg-gray-200 dark:bg-gray-800 dark:hover:bg-gray-700 rounded-lg font-medium transition-all duration-300 group hover:-translate-y-1 shadow-light hover:shadow-soft"
        >
          <span>See How I Can Help</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
    
    {/* Decorative elements with animation */}
    <div class="hidden md:block absolute -bottom-20 -left-20 w-60 h-60 bg-primary-100 dark:bg-primary-900/20 rounded-full blur-3xl opacity-60 z-0 animate-pulse-slow"></div>
    <div class="hidden md:block absolute top-20 right-0 w-40 h-40 bg-blue-100 dark:bg-blue-900/20 rounded-full blur-3xl opacity-40 z-0 animate-pulse-slow" style="animation-delay: 2s;"></div>
  </div>
</section>