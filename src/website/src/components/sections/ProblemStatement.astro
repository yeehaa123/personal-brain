---
// ProblemStatement.astro - Problem statement section for landing page
interface Props {
  problemStatement: {
    title: string;
    description: string;
    bulletPoints?: string[];
    enabled: boolean;
  };
}

const { problemStatement } = Astro.props;

// Don't render if section is disabled
if (!problemStatement.enabled) return null;
---

<section class="py-16 px-6 md:px-10 lg:px-16 bg-white dark:bg-gray-800">
  <div class="container mx-auto max-w-4xl">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-10 text-gray-900 dark:text-white">
      {problemStatement.title}
    </h2>
    <div class="prose prose-lg dark:prose-invert max-w-none">
      <p class="text-gray-700 dark:text-gray-300 text-lg leading-relaxed mb-8">
        {problemStatement.description}
      </p>
      
      {problemStatement.bulletPoints && problemStatement.bulletPoints.length > 0 && (
        <ul class="space-y-3 list-disc pl-6">
          {problemStatement.bulletPoints.map((point) => (
            <li class="text-gray-700 dark:text-gray-300">{point}</li>
          ))}
        </ul>
      )}
    </div>
  </div>
</section>