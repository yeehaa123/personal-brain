---
// Process.astro - Work process section for landing page
interface Props {
  process: {
    title: string;
    introduction?: string;
    steps: Array<{
      step: number;
      title: string;
      description: string;
    }>;
    enabled: boolean;
  };
}

const { process } = Astro.props;

// Don't render if section is disabled or undefined
if (!process || process.enabled === false) return null;
---

<section id="process" class="py-24 px-6 md:px-10 lg:px-16 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16">
      <div class="inline-block px-3 py-1 text-sm font-medium text-primary-700 dark:text-primary-300 bg-primary-50 dark:bg-primary-900/30 rounded-full mb-4">
        How We Work Together
      </div>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900 dark:text-white">
        {process.title}
      </h2>
      
      {process.introduction && (
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          {process.introduction}
        </p>
      )}
    </div>
    
    <div class="relative">
      {/* Custom connector lines for visual flow */}
      <div class="hidden lg:block absolute top-1/3 left-0 w-full h-1 bg-gradient-to-r from-primary-100 via-primary-200 to-primary-100 dark:from-primary-900/30 dark:via-primary-800/30 dark:to-primary-900/30 z-0"></div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8 lg:gap-12 relative z-10">
        {process.steps.map((step, index) => (
          <div class="bg-white dark:bg-gray-900 p-8 rounded-xl shadow-light hover:shadow-soft transition-all duration-300 border border-gray-100 dark:border-gray-700 group hover:border-primary-200 dark:hover:border-primary-700 h-full flex flex-col">
            <div class="flex justify-center mb-6">
              <div class="w-16 h-16 rounded-full bg-primary-100 dark:bg-primary-900/50 text-primary-700 dark:text-primary-300 flex items-center justify-center text-2xl font-bold group-hover:bg-primary-200 dark:group-hover:bg-primary-800/50 transition-colors">
                {step.step}
              </div>
            </div>
            
            <h3 class="text-xl font-bold mb-4 text-center text-gray-900 dark:text-white group-hover:text-primary-700 dark:group-hover:text-primary-300 transition-colors">
              {step.title}
            </h3>
            
            <p class="text-gray-600 dark:text-gray-300 text-center flex-grow">
              {step.description}
            </p>
            
            {/* Visual indicator of current step */}
            <div class="mt-6 flex justify-center opacity-0 group-hover:opacity-100 transition-opacity">
              <div class="w-12 h-1 bg-primary-500 dark:bg-primary-400 rounded-full"></div>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    {/* Final CTA after the process */}
    <div class="mt-16 text-center">
      <a href="#contact" class="inline-block px-6 py-3 text-primary-700 dark:text-primary-300 bg-primary-50 dark:bg-primary-900/30 hover:bg-primary-100 dark:hover:bg-primary-800/30 rounded-lg font-medium transition-colors">
        Start Your Journey With Me
      </a>
    </div>
  </div>
</section>