---
// Services.astro - Services section for landing page
interface Props {
  services: {
    title: string;
    introduction?: string;
    items: Array<{
      title: string;
      description: string;
      icon?: string;
      details?: string;
    }>;
  };
}

const { services } = Astro.props;
---

<section class="py-20 px-6 md:px-10 lg:px-16 bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900 dark:text-white">
        {services.title}
      </h2>
      
      {services.introduction && (
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          {services.introduction}
        </p>
      )}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.items.map((service) => (
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-lg transition-shadow p-8 border border-gray-100 dark:border-gray-700">
          {service.icon && (
            <div class="text-blue-600 mb-4">
              <i class={`text-3xl ${service.icon}`}></i>
            </div>
          )}
          
          <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">
            {service.title}
          </h3>
          
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {service.description}
          </p>
          
          {service.details && (
            <p class="text-sm text-gray-500 dark:text-gray-400">
              {service.details}
            </p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>