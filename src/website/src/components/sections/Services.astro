---
// Services.astro - Services section for landing page
interface Props {
  services: {
    title: string;
    introduction?: string;
    items: Array<{
      title: string;
      description: string;
      icon?: string;
      details?: string;
    }>;
  };
}

const { services } = Astro.props;
---

<section id="services" class="py-24 px-6 md:px-10 lg:px-16 bg-white dark:bg-gray-900 relative overflow-hidden">
  {/* Background accent */}
  <div class="absolute inset-0 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-900 h-1/2 w-full z-0"></div>
  
  {/* Decorative elements with subtle animation */}
  <div class="absolute top-1/4 left-0 w-80 h-80 bg-primary-50 dark:bg-primary-900/10 rounded-full -translate-x-1/2 blur-3xl opacity-60 z-0 animate-pulse-slow"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-primary-100 dark:bg-primary-900/10 rounded-full translate-x-1/2 translate-y-1/2 blur-3xl opacity-40 z-0 animate-pulse-slow" style="animation-delay: 1.5s;"></div>
  
  <div class="container mx-auto max-w-6xl relative z-10">
    <div class="text-center mb-16 reveal-on-scroll-scale" data-animate-once="true">
      <div class="inline-block px-3 py-1 text-sm font-medium text-primary-700 dark:text-primary-300 bg-primary-50 dark:bg-primary-900/30 rounded-full mb-4">
        Services
      </div>
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900 dark:text-white">
        {services.title}
      </h2>
      
      {services.introduction && (
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          {services.introduction}
        </p>
      )}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 stagger-animation">
      {services.items.map((service, index) => (
        <div 
          class="bg-white dark:bg-gray-800 rounded-xl shadow-light hover:shadow-soft transition-all duration-300 p-8 border border-gray-100 dark:border-gray-700 group hover:border-primary-200 dark:hover:border-primary-700 hover:-translate-y-1 reveal-on-scroll"
          data-animate-once="true"
        >
          <div class="mb-5">
            {service.icon ? (
              <div class="text-primary-600 dark:text-primary-400 mb-4 flex items-center justify-center w-16 h-16 bg-primary-50 dark:bg-primary-900/30 rounded-2xl group-hover:bg-primary-100 dark:group-hover:bg-primary-800/30 transition-all duration-300 transform group-hover:scale-110 group-hover:rotate-3">
                <i class={`text-3xl ${service.icon}`}></i>
              </div>
            ) : (
              <div class="text-primary-600 dark:text-primary-400 mb-4 flex items-center justify-center w-16 h-16 bg-primary-50 dark:bg-primary-900/30 rounded-2xl group-hover:bg-primary-100 dark:group-hover:bg-primary-800/30 transition-all duration-300 transform group-hover:scale-110 group-hover:rotate-3">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
                  <path d="M11.644 1.59a.75.75 0 01.712 0l9.75 5.25a.75.75 0 010 1.32l-9.75 5.25a.75.75 0 01-.712 0l-9.75-5.25a.75.75 0 010-1.32l9.75-5.25z" />
                  <path d="M3.265 10.602l7.668 4.129a2.25 2.25 0 002.134 0l7.668-4.13 1.37.739a.75.75 0 010 1.32l-9.75 5.25a.75.75 0 01-.71 0l-9.75-5.25a.75.75 0 010-1.32l1.37-.738z" />
                  <path d="M10.933 19.231l-7.668-4.13-1.37.739a.75.75 0 000 1.32l9.75 5.25c.221.12.489.12.71 0l9.75-5.25a.75.75 0 000-1.32l-1.37-.738-7.668 4.13a2.25 2.25 0 01-2.134-.001z" />
                </svg>
              </div>
            )}
          </div>
          
          <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white group-hover:text-primary-700 dark:group-hover:text-primary-300 transition-colors">
            {service.title}
          </h3>
          
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            {service.description}
          </p>
          
          {service.details && (
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-3">
              {service.details}
            </p>
          )}
          
          {/* Add a subtle learn more indicator */}
          <div class="mt-6 flex items-center text-primary-600 dark:text-primary-400 text-sm font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <span>Learn more</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
      ))}
    </div>
    
    {/* Add a CTA for services */}
    <div class="mt-16 text-center reveal-on-scroll" data-animate-once="true">
      <a
        href="#contact"
        class="inline-flex items-center px-8 py-4 text-white bg-primary-600 hover:bg-primary-700 rounded-lg font-medium shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 animate-bounce-in group animate-shine"
      >
        <span>Let's Discuss Your Project</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>